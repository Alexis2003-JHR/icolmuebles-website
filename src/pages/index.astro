---
import Layout from "../layouts/Layout.astro";
import Carousel from "../components/home/Carousel.astro";
import HomeCard from "../components/home/HomeCard.astro";

const contentMap = {
  card1: {
    title: "COMERCIAL",
    text: "QUEREMOS QUE NUESTROS CLIENTES HABLEN POR NUESTRO TRABAJO",
    btnText: "VER PROYECTOS"
  },
  card2: {
    title: "RESIDENCIAL",
    text: "AMUEBLA TUS ESPACIOS CON LOS MEJORES DISEÑOS Y LOS MEJORES MATERIALES",
    btnText: "CONOCER MÁS"
  }
};
---

<Layout title="Home">
  <Carousel />
  <div class="section">
    <HomeCard imgUrl="/home/2-home-section.jpg" title={contentMap.card1.title} text={contentMap.card1.text} btnText={contentMap.card1.btnText}/>
    <div class="middle-section">
      <div class="middle-content">
        <h3>Nuestros Proyectos</h3>
        <p>
          Puedes encontrar la mejor muebleria del mercado para tu proyecto
          residencial como para tu apartamento.
        </p>
        <p><span>Empecemos!</span></p>
      </div>
    </div>
    <HomeCard imgUrl="/home/1-home-section.jpg" title={contentMap.card2.title} text={contentMap.card2.text} btnText={contentMap.card2.btnText}/>
  </div>
</Layout>

<style>
  body {
    width: 100%;
    height: 100vh;
    display: block;
  }
  .section {
    display: flex;
    height: 100vh;
  }
  .middle-section {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }
  .middle-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    text-align: center;
  }
  .middle-content h3 {
    font-family: "montserrat", sans-serif;
  }
  .middle-content p span {
    color: var(--brown-own);
    font-weight: 600;
  }
</style>
