---
import Layout from "../layouts/Layout.astro";
import ProyectSection from "../components/proyectos/ProyectSection.astro";

import imgResidencial1 from "../assets/proyectos/residencial/1.jpg";
import imgResidencial2 from "../assets/proyectos/residencial/2.jpg";
import imgResidencial3 from "../assets/proyectos/residencial/3.jpg";
import imgResidencial4 from "../assets/proyectos/residencial/4.jpg";
import imgResidencial5 from "../assets/proyectos/residencial/5.jpg";
import imgResidencial6 from "../assets/proyectos/residencial/6.jpg";

import imgComercial1 from "../assets/proyectos/comercial/1.jpg";
import imgComercial2 from "../assets/proyectos/comercial/2.jpg";
import imgComercial3 from "../assets/proyectos/comercial/3.jpg";

const ResidencialData = [
  {
    imageCard: imgResidencial1,
    title: "Sala Warm In Wood",
    text: "Residencial",
  },
  {
    imageCard: imgResidencial3,
    title: "Sala Warm In Wood",
    text: "Residencial",
  },
  {
    imageCard: imgResidencial2,
    title: "Sala Warm In Wood",
    text: "Residencial",
  },
  {
    imageCard: imgResidencial4,
    title: "Sala Warm In Wood",
    text: "Residencial",
  },
  {
    imageCard: imgResidencial5,
    title: "Sala Warm In Wood",
    text: "Residencial",
  },
  {
    imageCard: imgResidencial6,
    title: "Sala Warm In Wood",
    text: "Residencial",
  },
];

const CommercialData = [
  {
    imageCard: imgComercial1,
    title: "Sala Warm In Wood",
    text: "Commercial",
  },
  {
    imageCard: imgComercial2,
    title: "Sala Warm In Wood",
    text: "Commercial",
  },
  {
    imageCard: imgComercial3,
    title: "Sala Warm In Wood",
    text: "Commercial",
  },
];
---

<Layout title="Proyectos">
  <main-container>
    <div class="selection-menu">
      <div id="opt-1" class="option residencial-opt active">
        <p>RESIDENCIAL</p>
      </div>
      <div id="opt-2" class="option commercial-opt">
        <p>COMERCIAL</p>
      </div>
    </div>

    <div id="section1" class="section">
      <ProyectSection data={ResidencialData} />
    </div>
    <div id="section2" class="section" style="display: none;">
      <ProyectSection data={CommercialData} />
    </div>
  </main-container>
</Layout>

<script>
  function showSection(sectionNumber: number) {
    ["section1", "section2"].forEach((sectionId, index) => {
      let section = document.getElementById(sectionId);
      if (section != null) {
        section.style.display = sectionNumber === index + 1 ? "flex" : "none";
      }
    });
  }

  ["opt-1", "opt-2"].forEach((optionId, index) => {
    let option = document.getElementById(optionId);
    if (option != null) {
      option.addEventListener("click", function () {
        showSection(index + 1);
        var activeElement = document.querySelector(".active");
        if (activeElement != null) {
          console.log(activeElement);
          activeElement.classList.remove("active");
        }
        option.classList.add("active");
      });
    }
  });
</script>

<style>
  body {
    width: 100%;
    display: block;
  }
  main-container {
    display: flex;
    align-items: center;
    flex-direction: column;
    width: 100%;
  }
  .selection-menu {
    display: flex;
    margin-top: 30px;
    width: 500px;
    justify-content: space-around;
  }
  .option {
    height: fit-content;
    padding: 6px 20px;
  }

  .option:hover {
    color: var(--yellow-own);
    cursor: pointer;
    transition: 0.4s;
  }

  .option p {
    font-family: "Montserrat", sans-serif;
    font-size: 18px;
    font-weight: 500;
    margin: 0px;
  }

  .active {
    transition: 1s linear;
    border-bottom: 4px solid var(--yellow-own);
  }

  .section {
    display: flex;
    width: 100%;
    justify-content: center;
  }
</style>
