---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Proyectos">
	<main-container>
		<div class="selection-menu">
			<div class="option residencial-opt active">
				<p>RESIDENCIAL</p>
			</div>
			<div class="option commercial-opt">
				<p>COMERCIAL</p>
			</div>
		</div>
	</main-container>
</Layout>

<style>
main-container {
	display: flex;
	justify-content: center;
	width: 100%;
	height: 100vh;
}
.selection-menu {
	display: flex;
	margin-top: 30px;
	width: 500px;
	justify-content: space-around;
}

.option {
	height: fit-content;
	padding: 6px 20px;
}

.option:hover {
	color: var(--yellow-own);
	cursor: pointer;
	transition: .4s ease-in;
}

.option p {
	font-family: 'Montserrat', sans-serif;
	font-size: 18px;
	font-weight: 500;
	margin: 0px;
}

.active {
	border-bottom: 4px solid var(--yellow-own);
}

</style>
