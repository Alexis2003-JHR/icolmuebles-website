<Layout title="Proyectos">
  <main-container>
    <div class="selection-menu">
      <div id="opt-1" class="option residencial-opt active">
        <p>RESIDENCIAL</p>
      </div>
      <div id="opt-2" class="option commercial-opt">
        <p>COMERCIAL</p>
      </div>
    </div>

    <div id="section1" class="section">
      <ProyectSection data={ResidencialData} />
    </div>
    <div id="section2" class="section" style="display: none;">
      <ProyectSection data={CommercialData} />
    </div>
  </main-container>
</Layout>

<script>
  function showSection(sectionNumber: number) {
    ["section1", "section2"].forEach((sectionId, index) => {
      let section = document.getElementById(sectionId);
      if (section != null) {
        section.style.display = sectionNumber === index + 1 ? "block" : "none";
      }
    });
  }

  ["opt-1", "opt-2"].forEach((optionId, index) => {
    let option = document.getElementById(optionId);
    if (option != null) {
      option.addEventListener("click", function () {
        showSection(index + 1);
        var activeElement = document.querySelector(".active");
        if(activeElement != null) {
          console.log(activeElement);
          activeElement.classList.remove("active");
        }
        option.classList.add("active");
      });
    }
  });
</script>

<style>
  main-container {
    display: flex;
    align-items: center;
    flex-direction: column;
    width: 100%;
    height: 100vh;
  }
  .selection-menu {
    display: flex;
    margin-top: 30px;
    width: 500px;
    justify-content: space-around;
  }
  .option {
    height: fit-content;
    padding: 6px 20px;
  }

  .option:hover {
    color: var(--yellow-own);
    cursor: pointer;
    transition: 0.4s ease-in;
  }

  .option p {
    font-family: "Montserrat", sans-serif;
    font-size: 18px;
    font-weight: 500;
    margin: 0px;
  }

  .active {
    transition: 1s linear;
    border-bottom: 4px solid var(--yellow-own);
  }

  .section {
    width: 100%;
  }
</style>
