---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Proyectos">
	<main-container>
		<div class="selection-menu">
			<div id="opt-1" class="option residencial-opt active">
				<p>RESIDENCIAL</p>
			</div>
			<div id="opt-2" class="option commercial-opt">
				<p>COMERCIAL</p>
			</div>
		</div>
		
		<section id="section1" class="residencial"><p>RESIDENCIAL TEXTO</p></section>
		<section id="section2" class="comercial" style="display: none;"><p>COMERCIAL TEXTO</p></section>
	</main-container>
</Layout>


<script>
function showSection(sectionNumber: number) {
    ['section1', 'section2'].forEach((sectionId, index) => {
        let section = document.getElementById(sectionId);
        if (section != null) {
            section.style.display = sectionNumber === index + 1 ? 'block' : 'none';
        }
    });
}

['opt-1', 'opt-2'].forEach((optionId, index) => {
    let option = document.getElementById(optionId);
    if (option != null) {
        option.addEventListener("click", function() { showSection(index + 1); });
    }
});
</script>

<style>
main-container {
	display: flex;
	justify-content: center;
	width: 100%;
	height: 100vh;
}
.selection-menu {
	display: flex;
	margin-top: 30px;
	width: 500px;
	justify-content: space-around;
}

.option {
	height: fit-content;
	padding: 6px 20px;
}

.option:hover {
	color: var(--yellow-own);
	cursor: pointer;
	transition: .4s ease-in;
}

.option p {
	font-family: 'Montserrat', sans-serif;
	font-size: 18px;
	font-weight: 500;
	margin: 0px;
}

.active {
	border-bottom: 4px solid var(--yellow-own);
}

</style>
