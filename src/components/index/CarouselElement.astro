---
export interface Props {
  imgName: string;
}

const { imgName } = Astro.props;
---

<div class="element-container">
    <img src={imgName} alt="" />
</div>

<style>
.element-container {
    max-height: 100vh;
    width: 380px;
    background-color: antiquewhite;
    margin-right: 20px;
    transition: .6s ease;
}
.element-container:hover {
    cursor: crosshair;
    width: 600px;
    opacity: 1;
}
.element-container img {
    object-fit: cover;
    width: 100%;
    height: 100%;
}
</style>
