---
import { Image } from "astro:assets";

export interface Props {
  imageCard: any;
  title: string;
  text: string;
  btnText: string;
}

const { imageCard } = Astro.props;
const { title } = Astro.props;
const { text } = Astro.props;
const { btnText } = Astro.props;
---

<div class="card-container">
  <Image src={imageCard} alt="a" quality="high" format="avif"/>
  <div class="card-content">
    <div class="text-content">
      <p>{ text }</p>
    </div>
    <div class="title-content">
      <h3>{ title }</h3>
    </div>
    <div class="btn"><a href="/proyectos">{ btnText }</a></div>
  </div>
  <div class="filter"></div>
</div>

<style>
.card-container {
  display: flex;
  justify-content: center;
  position: relative;
  max-height: 100vh;
  width: 90%;
}
.card-container img {
  object-fit: cover;
  height: 100vh;
  width: 100%;
}
.filter {
  position: absolute;
  top: 0px;
  width: 100%;
  height: 100%;
}
.filter:hover {
  background: #ffffff3f 0% 0% no-repeat padding-box;
  cursor: pointer;
  transition: .6s ease-in;
}
.card-content {
  font-family: 'Montserrat', sans-serif;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  bottom: 20%;
  color: var(--white-own);
  z-index: 1;
}
.card-content:hover ~ .filter {
  background: #ffffff3f 0% 0% no-repeat padding-box;
  cursor: pointer;
  transition: .6s ease-in;
}
.card-content p {
  text-align: center;
  font: normal normal 300 16px;
  margin: 0px;
}
.title-content h3 {
  font-weight: 600;
  font-size: 25px;
  padding: 5px;
  margin: 0px;
}
.btn {
  font-weight: 500;
  background: var(--white-own);
  color: var(--black-own);
  padding: 10px 15px;
  margin: 5px;
}
.btn a {
  text-decoration: none;
  color: var(--black-own);
}
.btn:hover {
  background-color: var(--yellow-own);
  color: var(--black-own);
  transition: .6s;
}
</style>
