---
import { Image } from "astro:assets";
export interface Props {
  imgName: string;
}

const { imgName } = Astro.props;
---

<div class="element-container">
  <Image
    src={imgName}
    alt="a"
    width={500}
    height={400}
    decoding="async"
    format="avif"
  />

  <style>
    .element-container {
      flex: 0 0 auto;
      scroll-snap-align: center;

      max-height: 100vh;
      width: 380px;
      margin-right: 20px;
      transition: 0.6s ease;
    }
    .element-container:hover {
      cursor: crosshair;
      width: 600px;
      opacity: 1;
    }
    .element-container img {
      object-fit: cover;
      width: 100%;
      height: 100%;
    }
  </style>
</div>
