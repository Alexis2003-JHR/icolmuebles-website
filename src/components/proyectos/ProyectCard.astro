---
export interface Props {
  imageCard: any;
  title: string;
  text: string;
  cost: string;
}

const { imageCard, title, text, cost } = Astro.props;
---

<div class="card-container">
  <img src={imageCard} alt="a" loading="lazy" />
  <p class="title">{title}</p>
  <p class="cost">{cost}</p>
  <p class="text">{text}</p>
</div>

<style>
  .card-container {
    display: grid;
    align-items: center;
    break-inside: avoid;
    margin-bottom: 30px;
    width: 90%;
  }
  .card-container img {
    width: 100%;
    height: auto;
    margin-bottom: 10px;
  }
  .card-container p {
    margin: 0px;
  }
  .title {
    font-size: 35px;
    font-family: "Montserrat", sans-serif;
  }
  .cost {
    font-size: 30px;
  }
  .text {
    font-size: 20px;
    color: #000000b3;
  }
</style>
