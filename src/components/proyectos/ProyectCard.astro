---
import { Image } from "astro:assets";

export interface Props {
  imageCard: any;
  title: string;
  text: string;
}

const { imageCard, title, text } = Astro.props;
---

<div class="card-container">
  <Image src={imageCard} alt="a" format="avif"/>
  <p class="title">{title}</p>
  <p class="text">{text}</p>
</div>

<style>
  .card-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 80%;
  }
  .card-container img {
    width: 100%;
    height: auto;
    object-fit: cover;
    margin-bottom: 10px;
  }
  .card-container p {
    margin: 0px;
  }
  .title {
    font-size: 35px;
    font-family: "Montserrat", sans-serif;
  }
  .text {
    font-size: 30px;
    color: #000000b3;
  }
</style>
