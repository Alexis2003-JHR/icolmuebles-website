---

<div class="main-container">
  {
    ComercialData.map((item) => (
      <div class="card-container">
        <a href={item.url}>
          <img src={item.imageCard} alt="a" loading="lazy" />
        </a>
        <p class="title">{item.title}</p>
        <p class="text">{item.text}</p>
      </div>
    ))
  }
</div>

<style>
  .main-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    width: 100%;
    margin: 40px 0px;
  }
  .card-container {
    width: 33%;
    margin-bottom: 30px;
  }
  .card-container img {
    padding: 0px 30px;
    width: 100%;
    height: 800px;
    object-fit: cover;
    margin-bottom: 10px;
  }
  .card-container img {
    padding: 0px 30px;
