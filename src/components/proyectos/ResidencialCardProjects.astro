import imgComercial4 from "/public/portafolio/residencial/subachoque/1.avif";
---

<div class="main-container">
  <div class="card-container">
    <a href="/portafolio/casas-chia">
      <img src={imgComercial1.src} alt="a" loading="lazy" />
    </a>
    <p class="title">Casas Ch√≠a</p>
    <p class="text">Carrera 116A 15C 70</p>
  </div>

  <div class="card-container">
    <a href="/portafolio/modigliani">
      <img src={imgComercial2.src} alt="a" loading="lazy" />
    </a>
    <p class="title">Modigliani</p>
    <p class="text">Carrera 116A 15C 70</p>
  </div>

  <div class="card-container">
    <a href="/portafolio/sausalito">
      <img src={imgComercial3.src} alt="a" loading="lazy" />
    </a>
    <p class="title">Saulsalito</p>
    <p class="text">Carrera 116A 15C 70</p>
  </div>

  <div class="card-container">
    <a href="/portafolio/subachoque">
      <img src={imgComercial4.src} alt="a" loading="lazy" />
    </a>
    <p class="title">Subachoque</p>
    <p class="text">Carrera 116A 15C 70</p>
  </div>
</div>

<style>
  .main-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    width: 100%;
    margin: 40px 0px;
  }
  .card-container {
    width: 25%;
  }
  .card-container img {
    padding: 0px 30px;
    width: 100%;
    height: 800px;
    object-fit: cover;
    margin-bottom: 10px;
  }
  .card-container img {
    padding: 0px 30px;
    width: 100%;
    height: 800px;
    object-fit: cover;
    margin-bottom: 10px;
  }
  .card-container img:hover {
    opacity: 0.8;
    transition: 0.6s;
  }
  .card-container:hover .title {
    transition: 0.6s;
    color: var(--yellow-own);
  }
  .card-container:hover .text {
    transition: 0.6s;
    color: var(--yellow-own);
  }
  .title {
    font-size: 35px;
    font-family: "Montserrat", sans-serif;
    padding: 0px 30px;
  }
  .text {
    font-size: 20px;
    color: #000000b3;
    padding: 0px 30px;
  }
</style>
